<h1>Update the fields below to edit this movie</h1>

<form action="/movies/<%=@movie.id%>" method="POST">
	<input type="hidden" name="_method" value="PATCH">
		<label for='title'>Title</label>
		Movie Title: <input type='text' name='movie[title]'  value="<%= @movie.title %>"><br>
		<label for='description'>Description</label>
		Movie Description: <input type='text' name='movie[description]' value="<%= @movie.description %>"><br>
		<label for='genre'>Genre</label>
		Movie Genre: <input type='text' name='movie[genre]' value="<%= @movie.genre %>"><br>
		<label for='release_date'>Release Date</label>
		Movie Release Date: <input type='text' name='movie[release_date]' value="<%= @movie.release_date %>"><br>
		<label for='run_time'>Run Time</label>
		Movie Length (In minutes): <input type='number' name='movie[run_time]' value="<%= @movie.run_time %>"><br>
		<input type="Submit" value="Submit"><br>
</form>